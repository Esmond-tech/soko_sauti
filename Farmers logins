<script>
  // ‚îÄ‚îÄ‚îÄ CONFIG ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  // TODO: Replace this with your n8n webhook URL for buyer registration
  const N8N_WEBHOOK_URL = 'https://YOUR_N8N_INSTANCE/webhook/buyer-register';
  // ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

  // Highlight checked product options
  document.querySelectorAll('.product-option input[type="checkbox"]').forEach(cb => {
    cb.addEventListener('change', () => {
      cb.closest('.product-option').classList.toggle('checked', cb.checked);
    });
  });

  document.getElementById('buyerForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const name    = document.getElementById('name').value.trim();
    const phone   = document.getElementById('phone').value.trim().replace(/\s/g, '');
    const county  = document.getElementById('county').value;
    const qty     = document.getElementById('qty').value.trim();
    const qtyUnit = document.getElementById('qtyUnit').value;

    const products = [...document.querySelectorAll('.product-option input:checked')]
                       .map(cb => cb.value);

    const btn    = document.getElementById('submitBtn');
    const status = document.getElementById('statusMsg');
    status.className = 'status';
    status.style.display = 'none';

    // Basic validation
    if (!name) { showError('Please enter your full name.'); return; }
    if (!phone || !/^\d{9,10}$/.test(phone)) { showError('Please enter a valid Kenyan phone number (e.g. 712345678).'); return; }
    if (!county) { showError('Please select your county.'); return; }
    if (products.length === 0) { showError('Please select at least one product you want to buy.'); return; }
    if (!qty || isNaN(qty)) { showError('Please enter the quantity you typically need.'); return; }

    const fullPhone = '+254' + phone.replace(/^0/, '');
    const payload = {
      name,
      phone: fullPhone,
      county,
      products: products.join(', '),
      quantity: qty + ' ' + qtyUnit,
      registeredAt: new Date().toISOString()
    };

    btn.disabled = true;
    btn.innerHTML = '<span class="spinner"></span>Registering‚Ä¶';

    try {
      const res = await fetch(N8N_WEBHOOK_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      if (res.ok) {
        showSuccess(`‚úÖ You're registered, ${name.split(' ')[0]}! You'll receive an SMS at ${fullPhone} when matching produce is listed.`);
        document.getElementById('buyerForm').reset();
        document.querySelectorAll('.product-option').forEach(el => el.classList.remove('checked'));
        btn.innerHTML = 'Register as Buyer';
        btn.disabled = false;
      } else {
        throw new Error('Server error');
      }
    } catch (err) {
      showError('Something went wrong. Please try again or contact support.');
      btn.innerHTML = 'Register as Buyer';
      btn.disabled = false;
    }
  });

  function showError(msg) {
    const el = document.getElementById('statusMsg');
    el.textContent = msg;
    el.className = 'status error';
  }
  function showSuccess(msg) {
    const el = document.getElementById('statusMsg');
    el.textContent = msg;
    el.className = 'status success';
  }
</script>
</body>
</html>
